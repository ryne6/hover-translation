{
  "name": "hover-translation",
  "version": "0.2.0",
  "description": "智能悬停翻译 Chrome 浏览器插件",
  "main": "index.js",
  "scripts": {
    "dev": "vite build --watch",
    "build": "node --loader ts-node/esm build.mts",
    "type-check": "npm run type-check:src && npm run type-check:tests && npm run type-check:tooling",
    "type-check:src": "tsc --noEmit -p tsconfig.json",
    "type-check:tests": "tsc --noEmit -p tsconfig.tests.json",
    "type-check:tooling": "tsc --noEmit -p tsconfig.node.json",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "package": "npm run build && zip -r hover-translation.zip dist/",
    "clean": "rm -rf dist/"
  },
  "keywords": [
    "chrome-extension",
    "translation",
    "hover",
    "browser-plugin"
  ],
  "author": "Hover Translation Team",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.258",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.11.30",
    "@types/node-fetch": "^2.6.13",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/ui": "^1.6.1",
    "eslint": "^8.52.0",
    "jsdom": "^23.2.0",
    "node-fetch": "^3.3.2",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vite": "^4.5.14",
    "vitest": "^1.6.1"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^17.2.3"
  }
}
